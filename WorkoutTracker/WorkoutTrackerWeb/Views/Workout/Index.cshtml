
@model IEnumerable<Workout>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workout List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Workout" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Workout
			</a>
		</div>
	</div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Note
                </th>
                <th>
                    StrengthID
                </th>
                <th>
                    CardioID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.Date
                    </td>
                    <td width="30%">
                        @obj.Note
                    </td>
                    <td width="10%">
                        @obj.StrengthId
                    </td>
                    <td width="10%">
                        @obj.CardioId
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a 
                                asp-controller="Workout" 
                                asp-action="Edit" 
                                asp-route-id="@obj.Id"
                                class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> 
                                Edit
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

