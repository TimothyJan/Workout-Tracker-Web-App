
@model Workout

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Workout</h2>
			<hr />
		</div>

		<div asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Date"></label>
			<input asp-for="Date" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Note"></label>
			<input asp-for="Note" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="StrengthId"></label>
			<input asp-for="StrengthId" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="CardioId"></label>
			<input asp-for="CardioId" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Workout" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Back to Workout List
		</a>
	</div>
</form>

